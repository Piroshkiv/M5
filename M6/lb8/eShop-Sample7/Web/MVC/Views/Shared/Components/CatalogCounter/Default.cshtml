@model MVC.ViewModels.Basket.BasketProduct

@if (Model.Quantity == 0)
{
    <div class="my-3 ">
        <button type="submit" class="btn btn-primary w-100 ">add to basket</button>
    </div>
}
else
{
    <div class="my-3 ">
        <div class="qty rounded bg-primary w-100 d-flex justify-content-around">
            <a type="button" class="btn text-white w-100">-</a>
            <a type="text" class="btn text-white w-25" readonly>@Model.Quantity</a>
            <a type="button" class="btn text-white w-100">+</a>
        </div>
    </div>
    <div class="my-3 ">
        <a type="button" class="btn btn-danger w-100">remove from basket</a>
    </div>
}
